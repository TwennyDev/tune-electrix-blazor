
<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href=""><img style="width: 100px;" src="/img/logo_horizontal_inverted.png" /></a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">

        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </li>

        <!-- SS 10/04 Nav link that takes user to the shop page -->
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="product-shop">
                <span class="oi oi-basket" aria-hidden="true"></span> Products
            </NavLink>
        </li>

        <!-- SS 10/04 Nav link that takes user to the vehicle search page -->
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="vehicle-search">
                <span class="oi oi-dashboard" aria-hidden="true"></span> Vehicle Search
            </NavLink>
        </li>

        <!-- SS 10/04 Shopping cart link component, displays the current amount of items in the cart and a link to navigate to the cart -->
        <ShoppingCartLink />

        <!-- SS 10/04 Invoice nav link that will only display when a user is logged in -->
        <AuthorizeView>
            <Authorized>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="invoices">
                        <span class="oi oi-dollar" aria-hidden="true"></span> My Invoices
                    </NavLink>
                </li>
            </Authorized>
        </AuthorizeView>

    </ul>
</div>

@code {

    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

}
